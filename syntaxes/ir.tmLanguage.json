{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ir",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#operator_name"
		},
		{
			"include": "#operator_number"
		},
		{
			"include": "#operator_fp"
		},
		{
			"include": "#parameter"
		},
		{
			"include": "#variable"
		},
		{
			"include": "#operator"
		},
		{
			"include": "#scope_name"
		}
	],
	"repository": {
		"scope_name_gradient": {

			"match": "Gradients.+-",
			"name": "comment.line.gradident"
		},
		"operator_fp": {
			"match": "(Float\\d+)|(Int\\d+)",
			"name": "entity.name.type"
		},
		"operator_name": {
			"match": "(=)\\s\\w+\\(",
			"name": "entity.name.function"
		},
		"operator_number": {
				"match": "op\\d+",
				"name": "keyword.letter"
		},
		"parameter": {
			"match": "(?<!^)%para.*?(\\))",
			"name": "comment.line.number-sign"
		}, 
		"variable": {
			"match": "%\\d+",
			"name": "variable.parameter"
		}, 
		"keywords": {
			"patterns": [{
				"name": "keyword.control.ir",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.ir",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ir",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.ir"
}